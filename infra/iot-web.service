[Unit]
Description=Django - Gunicorn web service
After=network.target

[Service]
Type=simple
User=iot
Group=iot
WorkingDirectory=/srv/iot_app
EnvironmentFile=/srv/iot_app/.env
ExecStart=/srv/iot_app/.venv/bin/python manage.py runserver
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target
